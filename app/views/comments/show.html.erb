<h1><%= t('views.common.title_show', name: Comment.model_name.human) %></h1>

<p>
  <strong><%= Comment.human_attribute_name(:created_at) %>:</strong>
  <%= @comment.created_at.localtime.strftime('%Y-%m-%d %H:%M')   %>
</p>

<p>
  <% if @comment.user.name.present? %>
    <strong><%= User.human_attribute_name(:name) %>:</strong>
    <%= @comment.user.name %>
  <% else %>
    <strong><%= User.human_attribute_name(:email) %>:</strong>
    <%= @comment.user.email %>
  <% end %>
</p>

<p>
  <strong><%= Comment.human_attribute_name(:content) %>:</strong>
  <%= @comment.content %>
</p>

<% if @comment.author?(current_user) %>
  <%= link_to t('views.common.edit'), edit_polymorphic_url([@commentable, @comment]) %> |
<% end %>

<%= link_to t('views.common.back'), @commentable %>
